                img(src=Video.thumbUrl crossorigin)
            //-(src = Video.thumbUrl crossorigin) 
            //-(style = `background-image:url(${Video.thumbUrl});background-size:cover; background-position:center;`)
            div.videodata
                span #{Video.title}
