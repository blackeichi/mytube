extends base.pug
block content
    div.previewbox
        video#preview
        div
            button#startBtn Start Recording
            button#cancleBtn Cancle Recording
    if errorMessage 
        span=errorMessage
    form(method = "POST", enctype ="multipart/form-data")
        input(type="file", accept="video/*", required, id="video", name="video") 
        input(name = "title", placeholder = "Title", required, type = "text")
        input(name = "description", placeholder = "Description", required, type = "text", minLength = 3)
        input(name = "hashtags", placeholder = "Hashtags, separated by comma.", required, type = "text", maxlength = 140)
        input(type="submit", value="Upload video")

block scripts
    script(src="/static/js/recorder.js")